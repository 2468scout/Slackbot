//STUFF
function onMessage(myMessage, myArray){
		if(
	this.isChat(message) &&
	this.isRequesting(message)
)
{
	bot.postMessageToGroup('scouting_app_testing', 'success.')
}
};

function isChat(myMessage){
return message.type === 'message' && Boolean(message.text);
};



function isRequesting(myMessage) {
	return message.text.toLowerCase().indexOf('testing') > -1
};


